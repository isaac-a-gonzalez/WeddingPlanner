@model User

<img src="~/images/swing.jpg" class="img-fluid" alt="Responsive image">

<div class="container">
  <div class="row">
    <div class="col">
      <form asp-action="registration" asp-controller="Home" method="post">
       <div class="form-group">
         <h1>Registration</h1>
          <label asp-for="FirstName"></label>
         <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
         <input class="form-control" asp-for="FirstName">
       </div>
       <div class="form-group">
         <label asp-for="LastName"></label>
         <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
         <input class="form-control" asp-for="LastName">
       </div>
       <div class="form-group">
         <label asp-for="Email"></label>
         <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
         <input class="form-control" asp-for="Email">
       </div>
       <div class="form-group">
         <label asp-for="Password"></label>
         <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
         <input class="form-control" asp-for="Password">
       </div>
       <div class="form-group">
         <label asp-for="PasswordConfirm"></label>
         <span class="text-danger font-weight-bold" asp-validation-for="PasswordConfirm"></span>
         <input class="form-control" asp-for="PasswordConfirm">
       </div>
       <button class="btn btn-info">Register!</button>
      </form>
    </div>

    <div class="col">
        <h1>Login</h1>
        <partial name="Login"/>
    </div>
  </div>
</div>
